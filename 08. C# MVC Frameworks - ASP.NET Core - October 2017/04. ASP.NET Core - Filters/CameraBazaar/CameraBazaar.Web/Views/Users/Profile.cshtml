@model UserBasicInfoModel
@{
    ViewData["Title"] = "Profile";
}
<h2>@ViewData["Title"]</h2>
<div>@Model.Username <a href="/users/edit" class="btn btn-primary">Edit Profile</a></div>

<div>Email: @Model.Email</div>
<div>Phone: @Model.PhoneNumber</div>
<div>Cameras: @Model.Cameras.Where(a => a.Quantity > 0).Count() in stock / @Model.Cameras.Where(a => a.Quantity == 0).Count() out of stock</div>

<div>Cameras:</div>
@if (Model.Cameras.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Camera</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cameras)
            {
                <tr>
                    <td><img src="@item.ImageUrl" width="100" alt="@item.Make @item.Model" class="img-responsive" /></td>
                    <td>@item.Make @item.Model</td>
                    <td>$@item.Price.ToString("f2")</td>
                    @{
                        if (item.Quantity == 0)
                        {
                            <td style="color:red">OUT OF STOCK</td>
                        }
                        else
                        {
                            <td style="color:green">IN STOCK</td>
                        }
                    }
                    @*<td>@(item.Quantity == 0 ? "OUT OF STOCK" : "IN STOCK")</td>*@
                    <td><a class="btn btn-sm btn-default" href="/cameras/fullDetail/@item.Id">Details</a></td>
                </tr>
                        }
        </tbody>
    </table>
                        }
                        else
                        {
                            <div>The user is not selling any cameras. Go to <a href="/">home page</a> to find more offers of the other users.</div>
                        }