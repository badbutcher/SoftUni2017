@model PartPageListingModel
@{
    ViewData["Title"] = "All Parts";
}
<h2>
    @ViewData["Title"]
    <a class="btn btn-primary" href="/parts/create">Add Part</a>
</h2>
@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}
<ul class="pagination">
    <li class="page-item @previousDisabled">
        <a class="page-link @previousDisabled" href="/parts/all?page=@Model.PreviusPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {

        <li class="page-item @(Model.CurrentPage == i ? "active": string.Empty)"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
    }
    <li class="page-item @nextDisabled">
        <a class="page-link @nextDisabled" href="/parts/all?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Supplier</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Parts)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToPrice()</td>
                <td>@item.Quantity</td>
                <td>@item.SupplierName</td>
                <td>
                    <a href="/parts/edit/@item.Id" class="btn btn-warning" >Edit</a>
                </td>
                <td>
                    <a href="/parts/delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>