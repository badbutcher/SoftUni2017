@model CustomerViewModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<form method="post">
    <div class="form-group row">
        <label class="col-form-label" for="newName">Name</label>
        <input required type="text" name="NewName" class="form-control" value="@Model.NewName" />
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="name">Birth date</label>
        <input required type="date" name="Birthdate" class="form-control" value="@Model.BirthDate" />
    </div>

    <input type="submit" class="btn btn-lg btn-block btn-outline-dark" value="Edit" />
</form>