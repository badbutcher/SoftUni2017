@model DeletePartModel
@{
    ViewData["Title"] = "Delete";
}
<h2>Delete</h2>
<form method="post">
    <div class="form-group row">
        <label class="col-form-label" for="name">Name</label>
        <input readonly type="text" name="Name" value="@Model.Part.Name" class="form-control" />
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="price">Price</label>
        <input readonly type="number" name="Price" value="@Model.Part.Price" class="form-control" />
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="supplier">Supplier</label>
        <input readonly type="text" name="Supplier" value="@Model.Part.Supplier" class="form-control" />
    </div>

    <input type="submit" class="btn btn-lg btn-block btn-danger" value="DELETE" />
</form>