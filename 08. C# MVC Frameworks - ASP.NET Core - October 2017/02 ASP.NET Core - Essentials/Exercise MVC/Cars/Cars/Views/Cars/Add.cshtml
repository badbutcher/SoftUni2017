@model AllPartsModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<form method="post">
    <div class="form-group row">
        <label class="col-form-label" for="make">Make</label>
        <input required type="text" name="Make" class="form-control" />
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="model">Model</label>
        <input required type="text" name="Model" class="form-control" />
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="travelledDistance">TravelledDistance</label>
        <input required type="number" name="TravelledDistance" class="form-control" />
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="parts">Parts</label>
        <select class="col-form-label" name="Parts" multiple>
            @foreach (var item in Model.Parts)
            {
                <option class="form-control" value="@item.Name">@item.Name</option>
            }
        </select>
        Hold down the Ctrl (windows) / Command (Mac) button to select multiple options.
    </div>

    <input type="submit" class="btn btn-lg btn-block btn-outline-dark" value="Add" />
</form>