@model AddSaleModel
@{
    ViewData["Title"] = "Add";
}
<h2>Add</h2>
<form action="/sales/add/finalize">
    <div class="form-group row">
        <label class="col-form-label" for="customer">Customer</label>
        <select class="col-form-label" name="Customer">
            @foreach (var item in Model.Customers)
            {
                <option class="form-control" value="@item.Name">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="car">Car</label>
        <select class="col-form-label" name="Car">
            @foreach (var item in Model.Cars)
            {
                <option class="form-control" value="@(item.Make + " " + item.Model)">@(item.Make + " " + item.Model)</option>
            }
        </select>
    </div>

    <div class="form-group row">
        <label class="col-form-label" for="discount">Discount</label>
        <input type="number" name="Discount" class="form-control" />
    </div>

    <input type="submit" class="btn btn-lg btn-default" value="Submit" />
</form>