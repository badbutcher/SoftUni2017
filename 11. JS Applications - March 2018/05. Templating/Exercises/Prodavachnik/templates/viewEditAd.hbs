<h1 class="titleForm">Edit existing advertisement</h1>
<form id="formEditAd" class="form">
    <div><input type="hidden" name="id" required value="{{id}}"/></div>
    <div><input type="hidden" name="publisher" required/></div>
    <div>Title:</div>
    <div><input type="text" name="title" required value="{{title}}"/></div>
    <div>Description:</div>
    <div><textarea name="description" rows="10" required>{{description}}</textarea></div>
    <div>Date Published:</div>
    <div><input type="date" name="datePublished" required value="{{datePublished}}"/></div>
    <div>Price:</div>
    <div><input type="number" step="0.01" name="price" required value="{{price}}"/></div>
    <div>Image:</div>
    <div><input type="url" name="image" required value="{{image}}"/></div>
    <div><input type="button" id="buttonEditAd" value="Edit"/></div>
</form>